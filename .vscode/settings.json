{
	"files.trimTrailingWhitespace": true,
	"editor.wordWrap": "on",
	"editor.insertSpaces": false,
	"cSpell.language": "de-DE",
	"search.exclude": {
		"**/_build": true,
		"**/_input": true,
		"**/_locales": true,
		"**/_static": true
	},
	"cSpell.customDictionaries": {
		"custom-dictionary-workspace": {
			"name": "custom-dictionary-workspace",
			"path": "${workspaceFolder}/.cspell/custom-dictionary-workspace.txt",
			"addWords": true,
			"scope": "workspace"
		}
	},
	"esbonio.sphinx.confDir": "${workspaceFolder}",
	"esbonio.sphinx.srcDir": "${workspaceFolder}",
	"restructuredtext.linter.name": "none",
	"restructuredtext.linter.doc8.extraArgs": [

		"--ignore D000",
		"--ignore D001",
		"--ignore D002",
		"--ignore D003",
		"--ignore D004"
	],
	"restructuredtext.preview.scrollEditorWithPreview": false,
	"restructuredtext.preview.scrollPreviewWithEditor": false,
	"restructuredtext.syntaxHighlighting.disabled": false,
	"restructuredtext.preview.name": "sphinx",
	"python.analysis.typeCheckingMode": "basic",
	"iis.configDir": "",
}
